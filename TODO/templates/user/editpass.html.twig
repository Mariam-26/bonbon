{% extends 'user.html.twig' %}

{% block title %}Modification du profil de
  {{ app.user.firstname }}
	{{ app.user.name }} 	
{% endblock %}

{% block body %}
	<div class="grix xs4 container p-5">
		{% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error light-4 text-red text-dark-4">{{ message }}</div>
			</div>

		{% endfor %}
		<div class="col-xs4 p-5">
			<h4>Modification du mot de passe de
        {{ app.user.firstname }}
				{{ app.user.name }} </h4>	

			<form method="post">

				<div class="form-field">
					<label for="pass">Mot de passe</label>
					<input type="password" id="pass" name="pass" class="form-control"/>
				</div>

				<div class="form-field">
					<label for="pass2">Confimer le mot de passe</label>
					<input type="password" id="pass2" name="pass2" class="form-control"/>
				</div>
				<button class="btn shadow-1 btn btn-primary">VALIDER</button>
			</form>
		</div>
	</div>
{% endblock %}
