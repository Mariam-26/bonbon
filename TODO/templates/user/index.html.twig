{% extends 'user.html.twig' %}

{% block title %}Profil de
	{{ app.user.firstname }}
	{{ app.user.name }}

{% endblock %}

{% block body %}
	<div class="container user">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 success">{{message}}</div>
			</div>
		{% endfor %}
		<div class="container col-xs4 m-5">
			<h3 class="profil">Profil de
				{{ app.user.firstname }}
				{{ app.user.name }}</h3>
		</div>

		<div class=" container mb-5">
			<h6 class="adresse">Pr√©nom :
				{{ app.user.firstname }}</h6>

			<div class="col-xs4">
				<h6 class="adresse">Nom :
					{{ app.user.name }}</h6>
			</div>
			<div class="col-xs3"></div>

			<h6 class="col-xs1 adresse">Email :
				{{ app.user.email }}</h6>
		</div>

		<div class="container col-xs4 m-5 modif">
			<a href="{{ path('user_profil_modifier') }}" class="btn shadow-1 rounded-1 blue">Modifier le profil</a>

			<a href="{{ path('user_pass_modifier') }}" class="btn shadow-1 rounded-1 blue">Modifier le mot de passe</a>
		</div>

		<div
			class="container my-5 col-xs4">
			{# <div class="col-xs4"> #}
			<h3 class="article">Article de
				{{ app.user.firstname }}
				{{ app.user.name }}
				({{ app.user.articles|length }})
			</h3>
			{# </div> #}
		</div>

		<div class="grix xs2 container mb-5">
			{% for article in app.user.articles %}
				<h5 class="titre">Titre :</h5>
				<h6 class="categorie">{{ article.title }}</h6>
			{% endfor %}
		</div>

	</div>
{% endblock %}
