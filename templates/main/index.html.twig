{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div container>
		<div class="my-5 bg-light">
			<div class="container">
				<h1 class="display-5">BIENVENUE !</h1>
				<p class="lead">Page d'accueil</p>
			</div>
		</div>
		            {# <a href="{{ path('app_articles_new') }}">Create new</a> #}
	</div>

	<div class="card-group container d-flex">
  <div class="row d-flex">
    {% for article in articles %}
    <div class="col-lg-6 col-md-6 col-sm-12">
			<img src="{{article.image}}" alt="Illustration de l'article {{article.title}}" class="card-img-top img-fluid">
			<div class="card-body">
				<h3 class="card-title">{{article.title}}</h3>
				<h5>Cat√©gorie :
				{{article.categories.name}}
				</h5>
				<p class="card-text">{{article.content|striptags|u.truncate(100, '...')}}</p>
				<h6>Author :
				{{article.author}}
				</h6>
				<a href="{{ path('articles_details', {id: article.id}) }}" class="btn btn-primary my-5">VOIR PLUS</a>
			</div>
		</div>
{% endfor %}
  </div>
</div>
